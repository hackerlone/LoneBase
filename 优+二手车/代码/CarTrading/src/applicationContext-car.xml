<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<import resource="applicationContext.xml" />

	<bean id="CarDao" class="gxa.dao.CarDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="CarService" class="gxa.service.CarService">
		<property name="carDaoI" ref="CarDao" />
	</bean>
	<bean id="carAction" class="gxa.controller.CarAction">
		<property name="carServiceI" ref="CarService" />
		<property name="pageInfo" ref="pageInfo" />
	</bean>

</beans>